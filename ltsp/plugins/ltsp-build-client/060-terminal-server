case "$MODE" in
    commandline)
        add_option "terminal-server" "`eval_gettext "install a terminal server"`" "advanced" "false"
        ;;
    configure)
        if test -n $option_terminal_server_value; then
          TERMINAL_SERVER=true
        fi
        ;;
    finalization)
       if test "true" = "$TERMINAL_SERVER"; then
         echo "installing terminal server items"
         chroot $ROOT apt-get install --yes ldm-server nbd-server tftpd-hpa 
         echo "ok"
       fi
       ;;
esac