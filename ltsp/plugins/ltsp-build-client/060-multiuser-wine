case "$MODE" in
    commandline)
        add_option "multiuser-wine" "`eval_gettext "multiuser wine"`" "advanced" "false"
        ;;
    configure)
        if [ -n "$option_multiuser_wine_value" ]; then
            WINERY=true
        fi
        ;;
    finalization)
        if $WINERY; then
          echo -n "installing winery..."
          chroot $ROOT apt-get install --yes wine
          # moved to /usr/share/bin/winery.sh, installed by propietary-apps
          #cp /etc/ltsp/includes/usr/bin/winery $ROOT/usr/bin/winery
          echo "ok"
        fi
        ;;
esac
