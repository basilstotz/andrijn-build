case "$MODE" in
    commandline)
        add_option "copy-tftpboot" "`eval_gettext "copy tftpboot to image"`" "advanced" "false"
        ;;
    configure)
        if test -n $option_copy_tftpboot_value; then
          COPY_TFTPBOOT=true
        fi
        ;;
    finalization)
        if $COPY_TFTPBOOT; then
          if test -d /var/lib/tftpboot/ltsp/; then
            echo -n "copying tftpboot..."
            if ! test -d $ROOT/var/lib/tftpboot/ltsp; then
               mkdir -p $ROOT/var/lib/tftpboot/ltsp
            fi
            cp -r /var/lib/tftpboot/ltsp $ROOT/var/lib/tftpboot/
            echo "ok"
          fi
        fi
        ;;
esac
