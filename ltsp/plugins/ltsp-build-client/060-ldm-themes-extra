case "$MODE" in
    commandline)
        add_option "ldm-themes-extra" "`eval_gettext "install extra ldm-themes"`" "advanced" "false"
        ;;
    configure)
        LDM_THEMES_EXTRA=true
        ;;
    finalization)
        WO="usr/share/ldm/themes"
        if $LDM_THEMES_EXTRA; then     
          if test -d /etc/ltsp/includes/$WO; then
            echo -n "installing ldm-themes-extra..."
            cp -r /etc/ltsp/includes/$WO/* $ROOT/$WO
            if test -h $ROOT/$WO/default; then
              rm $ROOT/$WO/default
            fi
            ln -s $ROOT/$WO/amxa $ROOT/$WO/default
            echo "ok"
          fi
        fi
        ;;
esac
