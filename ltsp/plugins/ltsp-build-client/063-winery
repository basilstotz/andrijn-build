case "$MODE" in
    commandline)
        add_option "winery" "`eval_gettext "multiuser wine"`" "advanced" "false"
        ;;
    configure)
        if [ -n "$option_winery_value" ]; then
            WINERY=true
        fi
        ;;
    finalization)
        if $WINERY; then
          echo -n "installing winery..."
          cp /etc/ltsp/includes/usr/bin/winery $ROOT/usr/bin/winery
          echo "ok"
        fi
        ;;
esac
