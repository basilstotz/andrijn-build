case "$MODE" in
    commandline)
        add_option "andrijn-updater" "`eval_gettext "andrijn-updater http://..."`" "advanced" "true"
        ;;
    configure)
        if [ -n "$option_late_packages_value" ]; then
            ANDRIJN_IMAGES_URL="$(echo $option_andrijn_updater_value)"
        fi
        ;;
    finalization)
        echo -n "installing ltsp-install..."
        cp /etc/ltsp/includes/etc/init.d/ltsp-install $ROOT/etc/init.d/.
        echo "LTSP_IMAGES_URL=$ANDRIJN_IMAGES_URL" >> $ROOT/etc/default/ltsp-install
        chroot $ROOT update-rc.d ltsp-install defaults
        echo "ok"
        ;;
esac
